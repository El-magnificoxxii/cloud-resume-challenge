    },
    {
      "type": "Microsoft.Cdn/profiles/originGroups",
      "apiVersion": "2024-02-01",
      "name": "[format('{0}/{1}', format('fd-{0}', uniqueString(resourceGroup().id)), 'storageOriginGroup')]",
      "properties": {
        "loadBalancingSettings": {
          "sampleSize": 4,
          "successfulSamplesRequired": 3
        },
        "healthProbeSettings": {
          "probePath": "/index.html",
          "probeRequestType": "HEAD",
          "probeProtocol": "Https",
          "probeIntervalInSeconds": 100
        },
        "sessionAffinityState": "Disabled"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Cdn/profiles', format('fd-{0}', uniqueString(resourceGroup().id)))]"
      ]
    },
    {
      "type": "Microsoft.Cdn/profiles/originGroups/origins",
      "apiVersion": "2024-02-01",
      "name": "[format('{0}/{1}/{2}', format('fd-{0}', uniqueString(resourceGroup().id)), 'storageOriginGroup', 'storageOrigin')]",
      "properties": {
        "hostName": "[replace(replace(reference(resourceId('Microsoft.Storage/storageAccounts', parameters('storage_account_name')), '2023-05-01').primaryEndpoints.web, 'https://', ''), '/', '')]",
        "originHostHeader": "[replace(replace(reference(resourceId('Microsoft.Storage/storageAccounts', parameters('storage_account_name')), '2023-05-01').primaryEndpoints.web, 'https://', ''), '/', '')]",
        "httpPort": 80,
        "httpsPort": 443,
        "priority": 1,
        "weight": 1000,
        "enabledState": "Enabled"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Cdn/profiles/originGroups', format('fd-{0}', uniqueString(resourceGroup().id)), 'storageOriginGroup')]",
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storage_account_name'))]"
      ]
    },
    {
      "type": "Microsoft.Cdn/profiles/customDomains",
      "apiVersion": "2024-02-01",
      "name": "[format('{0}/{1}', format('fd-{0}', uniqueString(resourceGroup().id)), replace(parameters('custom_domain_name'), '.', '-'))]",
      "properties": {
        "hostName": "[parameters('custom_domain_name')]",
        "azureDnsZone": {
          "id": "[resourceId('Microsoft.Network/dnsZones', parameters('dns_zone_name'))]"
        },
        "tlsSettings": {
          "certificateType": "ManagedCertificate",
          "minimumTlsVersion": "TLS12"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Cdn/profiles', format('fd-{0}', uniqueString(resourceGroup().id)))]"
      ]
    },
    {
      "type": "Microsoft.Cdn/profiles/afdEndpoints/routes",
      "apiVersion": "2024-02-01",
      "name": "[format('{0}/{1}/{2}', format('fd-{0}', uniqueString(resourceGroup().id)), format('fd-endpoint-{0}', uniqueString(resourceGroup().id)), 'defaultRoute')]",
      "properties": {
        "originGroup": {
          "id": "[resourceId('Microsoft.Cdn/profiles/originGroups', format('fd-{0}', uniqueString(resourceGroup().id)), 'storageOriginGroup')]"
        },
        "supportedProtocols": [
          "Http",
          "Https"
        ],
        "patternsToMatch": [
          "/*"
        ],
        "forwardingProtocol": "MatchRequest",
        "linkToDefaultDomain": "Disabled",
        "httpsRedirect": "Enabled",
        "customDomains": [
          {
            "id": "[resourceId('Microsoft.Cdn/profiles/customDomains', format('fd-{0}', uniqueString(resourceGroup().id)), replace(parameters('custom_domain_name'), '.', '-'))]"
          }
        ],
        "cacheConfiguration": {
          "queryStringCachingBehavior": "IgnoreQueryString",
          "compressionSettings": {
            "contentTypesToCompress": [
              "text/plain",
              "text/html",
              "text/css",
              "application/javascript",
              "application/x-javascript",
              "application/json"
            ],
            "isCompressionEnabled": true
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Cdn/profiles/customDomains', format('fd-{0}', uniqueString(resourceGroup().id)), replace(parameters('custom_domain_name'), '.', '-'))]",
        "[resourceId('Microsoft.Cdn/profiles/afdEndpoints', format('fd-{0}', uniqueString(resourceGroup().id)), format('fd-endpoint-{0}', uniqueString(resourceGroup().id)))]",
        "[resourceId('Microsoft.Cdn/profiles/originGroups/origins', format('fd-{0}', uniqueString(resourceGroup().id)), 'storageOriginGroup', 'storageOrigin')]",
        "[resourceId('Microsoft.Cdn/profiles/originGroups', format('fd-{0}', uniqueString(resourceGroup().id)), 'storageOriginGroup')]"
      ]
    }
  ],
  "outputs": {
    "storageBlobEndpoint": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Storage/storageAccounts', parameters('storage_account_name')), '2023-05-01').primaryEndpoints.web]"
    },
    "frontDoorEndpointHostname": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Cdn/profiles/afdEndpoints', format('fd-{0}', uniqueString(resourceGroup().id)), format('fd-endpoint-{0}', uniqueString(resourceGroup().id))), '2024-02-01').hostName]"
    },
    "customDomainUrl": {
      "type": "string",
      "value": "[format('https://{0}', parameters('custom_domain_name'))]"
    }
  }
}